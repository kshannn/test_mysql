{{#extends 'base'}}

{{#block 'content'}}

<h1>Customers</h1>

<form method="GET">
    <input type="text" placeholder="Search first name" name="search_terms" class="form-control"/>
    <input type="submit" value="Search" class="btn btn-primary mt-3" />
</form>

<table class="table">
    <thead>
        <th>Customer ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
    </thead>

    {{#each customers}}
     <tr>
        <td>{{this.customer_id}}</td>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.email}}</td>
    </tr>
    {{/each}}
</table>

{{/block}}

{{/extends}}